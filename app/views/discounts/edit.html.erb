<%= form_with url: "/merchant/#{@merchant.id}/discounts/#{@discount.id}", method: :patch, local: true do |f|  %>
<%= f.label :name %>
<%= f.text_field :name, value: "#{@discount.name}" %>
<%= f.label :percent_discount %>
<%= f.text_field :percent_discount, value: "#{@discount.percent_discount}"%>
<%= f.label :quantity_limit %>
<%= f.text_field :quantity_limit, value: "#{@discount.quantity_limit}" %>
<%= f.submit "Save" %>
<% end %>
